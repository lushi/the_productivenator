<li id="<%= todo_item.id %>">
  <span class="content"><%= todo_item.task %></span>
  <% if current_user?(todo_item.user) %>
    <%= link_to "complete!", todo_item, method: :delete,
                                     data: { confirm: "The item will be deleted. You sure?" },
                                     title: todo_item.task %>
  <% end %>
</li>